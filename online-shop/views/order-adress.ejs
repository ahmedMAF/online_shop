        <a href="https://www.facebook.com/International.PS.Embroideries/">
            <i class="fa-brands fa-facebook ms-3 text-primary"></i></a>
        <a href="https://wa.me/+972595831862"><i class="fa-brands fa-whatsapp ms-3 text-primary"></i></a>
    </ul>
</div>
<%- include("./part/footer.ejs") %>
<script>
    let submit = document.querySelector(".ordrer");
    let input = document.querySelector(".input-style");
    submit.onclick = function(e){
        if(input.value == ""){
            e.preventDefault();
            if(document.querySelector(".alert") === null){
                let p = document.createElement("p");
                p.classList.add("alert");
                p.classList.add("alert-primary");
                p.classList.add("text-center");
                p.classList.add("mt-3");
                p.classList.add("container");
                p.appendChild(document.createTextNode("please write your adress"));
                document.body.appendChild(p);
            }

        }
    };
</script>
