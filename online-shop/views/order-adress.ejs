    <form action="/order/add" method="POST" style="max-width: 700px;" class="mx-auto">
        <input type="text" placeholder="العنوان" name="adress" class="input-style mb-3">
        <input type="text" placeholder="رقم الهاتف" name="phones" class="input-style">
